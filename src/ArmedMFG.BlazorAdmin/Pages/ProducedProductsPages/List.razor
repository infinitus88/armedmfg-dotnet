@page "/admin/product-producing"
@attribute [Authorize(Roles = ArmedMFG.BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits ArmedMFG.BlazorAdmin.Helpers.BlazorComponent

<PageTitle>ArmedMFG Admin</PageTitle>

<h1>Manage Product Batches</h1>

@if (productBatches == null)
{
    <Spinner></Spinner>
}
else
{

    <p class="esh-link-wrapper">
        <button class="btn btn-primary" @onclick="@(CreateClick)">
            Create New
        </button>
    </p>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Produded Date</th>
            <th>Spent Materials</th>
            <th>Produced Products</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody class="cursor-pointer">
        @foreach (var item in productBatches)
        {
            <tr @onclick="@(() => DetailsClick(item.Id))">
                <td>@item.Id</td>
                <td>@item.ProducedDate</td>
                <td>@item.ProducedProducts.First().ProductType</td>
                <td>@item.SpentMaterials.First().MaterialType</td>
                <td>
                    <button @onclick="@(() => EditClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-primary">
                        Edit
                    </button>

                    <button @onclick="@(() => DeleteClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-danger">
                        Delete
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    @* <Details Categories="@materialCategories" OnEditClick="EditClick" @ref="DetailsComponent"></Details> *@
    @* <Edit Categories="@materialCategories" OnSaveClick="ReloadProductBatchs" @ref="EditComponent"></Edit> *@
    @* <Create Categories ="@materialCategories" OnSaveClick="ReloadProductBatchs" @ref="CreateComponent"></Create> *@
    @* <Delete Categories ="@materialCategories" OnSaveClick="ReloadProductBatchs" @ref="DeleteComponent"></Delete> *@
}
